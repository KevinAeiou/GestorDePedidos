<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.CadastraUsuarioActivity">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtNomeAplicativo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtNomeCadastraUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:hint="@string/stringNome"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtNomeAplicativo">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtNomeCadastraUsuario"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtEmailCadastraUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/stringEmail"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
        app:layout_constraintStart_toStartOf="@id/txtNomeCadastraUsuario"
        app:layout_constraintEnd_toEndOf="@id/txtNomeCadastraUsuario"
        app:layout_constraintTop_toBottomOf="@id/txtNomeCadastraUsuario">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtEmailCadastraUsuario"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtSenhaCadastraUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:passwordToggleEnabled="true"
        android:hint="@string/stringSenha"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
        app:layout_constraintStart_toStartOf="@id/txtEmailCadastraUsuario"
        app:layout_constraintEnd_toEndOf="@id/txtEmailCadastraUsuario"
        app:layout_constraintTop_toBottomOf="@id/txtEmailCadastraUsuario">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtSenhaCadastraUsuario"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCadastrarUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="28sp"
        android:textAllCaps="false"
        android:text="@string/stringCadastrar"
        app:layout_constraintStart_toStartOf="@id/txtSenhaCadastraUsuario"
        app:layout_constraintEnd_toEndOf="@+id/txtSenhaCadastraUsuario"
        app:layout_constraintTop_toBottomOf="@+id/txtSenhaCadastraUsuario"/>


</androidx.constraintlayout.widget.ConstraintLayout>