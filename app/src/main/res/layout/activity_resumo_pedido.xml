<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraintLayoutResumoPedido"
    tools:context=".ui.activity.ResumoPedidoActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewResumoPedido"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txtLayoutObservacaoResumoPedido"
        tools:listitem="@layout/item_novo_pedido"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtLayoutObservacaoResumoPedido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        android:paddingBottom="0dp"
        android:hint="@string/string_observacao"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:layout_constraintStart_toStartOf="@id/txtMoedaResumoPedido"
        app:layout_constraintEnd_toEndOf="@id/txtLayoutNumeroMesaResumoPedido"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewResumoPedido"
        app:layout_constraintBottom_toTopOf="@id/txtLayoutNumeroMesaResumoPedido">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtObservacaoResumoPedido"
            android:layout_width="match_parent"
            android:inputType="textMultiLine"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtLayoutNumeroMesaResumoPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="75dp"
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        android:paddingBottom="0dp"
        android:hint="@string/stringMesa"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:layout_constraintEnd_toEndOf="@id/btnConfirmaResumoPedido"
        app:layout_constraintBottom_toTopOf="@id/btnConfirmaResumoPedido">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtNumeroMesaResumoPedido"
            android:layout_width="match_parent"
            android:inputType="numberSigned"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtMoedaResumoPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="end"
        android:textSize="20sp"
        android:text="@string/stringMoedaReal"
        app:layout_constraintStart_toStartOf="@id/btnConfirmaResumoPedido"
        app:layout_constraintEnd_toStartOf="@id/txtTotalResumoPedido"
        app:layout_constraintTop_toTopOf="@id/txtTotalResumoPedido"
        app:layout_constraintBottom_toBottomOf="@id/txtTotalResumoPedido"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtTotalResumoPedido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="start"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/txtMoedaResumoPedido"
        app:layout_constraintEnd_toStartOf="@id/txtLayoutNumeroMesaResumoPedido"
        app:layout_constraintTop_toTopOf="@id/txtLayoutNumeroMesaResumoPedido"
        app:layout_constraintBottom_toBottomOf="@id/txtLayoutNumeroMesaResumoPedido"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnConfirmaResumoPedido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="@string/string_confirma_pedido"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:textAllCaps="false"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>